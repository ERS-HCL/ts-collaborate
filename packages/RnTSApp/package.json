{
  "name": "RnTSApp",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "web": "expo start --web",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "@thefakeorg/react-native": "*",
    "@thefakeorg/store": "*",
    "@thefakeorg/utils": "*",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-native": "0.63.4",
    "react-native-web": "~0.11",
    "react-redux": "^7.2.2",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@testing-library/react-native": "^7.1.0",
    "@types/jest": "^25.2.3",
    "@types/react-native": "^0.63.2",
    "@types/react-test-renderer": "^16.9.2",
    "add": "^2.0.6",
    "babel-jest": "^25.1.0",
    "babel-preset-expo": "^8.3.0",
    "eslint": "^6.5.1",
    "expo": "^40.0.1",
    "expo-cli": "^4.1.3",
    "hoist-non-react-statics": "^3.3.2",
    "jest": "^25.1.0",
    "metro-react-native-babel-preset": "^0.59.0",
    "react-test-renderer": "16.13.1",
    "tslib": "^2.1.0",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "react-native",
    "setupFiles": [
      "./jestSetup.js"
    ],
    "moduleDirectories": ["node_modules", "<rootDir>/node_modules"],
    "transformIgnorePatterns": [
      "node_modules/(?!(jest-)?react-native|@react-native-community|@thefakeorg|@thefakeorg/.*)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "workspaces": {
    "nohoist": [
      "react-native",
      "react-native/**",
      "react",
      "react/**",
      "hoist-non-react-statics",
      "hoist-non-react-statics/**",
      "**/react-native-typescript-transformer",
      "**/react-native-typescript-transformer/**",
      "react-redux",
      "react-redux/**",
      "@reduxjs/toolkit",
      "@reduxjs/toolkit/**",
      "@testing-library/react-native/**",
      "@testing-library/react-native",
      "redux-saga",
      "redux-saga/**",
      "jest",
      "jest/**"
    ]
  }
}